<ul class="pattern indices">
    {{#each pattern.channels}}
        0
    {{/each}}
</ul>
{{#each pattern.channels}}
<ul class="pattern">
    {{#each this}}
    <li class="{{toLowerCase this.sound}}">
        {{#if this.sound}}
            <span class="sound accent-{{this.accent}}">
                {{this.sound}}
            </span>
            {{# if this.note}}
            <span class="note">
                {{this.note}}
            </span>
            <span class="octave">
                 - {{this.octave}}
            </span>
            {{/if}}
        {{else}}
            ----
        {{/if}}
    </li>
    {{/each}}
</ul>
{{/each}}
