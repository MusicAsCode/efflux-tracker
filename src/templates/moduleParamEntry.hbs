<div id="moduleParamEntry">
    <h4>Module Parameter Change editor</h4>
    <ul id="moduleSelect">
        <li data-value="volume">volume</li>
        <li data-value="pitchUp">pitch +8ve</li>
        <li data-value="pitchDown">pitch -8ve</li>
        <li data-value="filterFreq">filter frequency</li>
        <li data-value="filterQ">filter q</li>
    </ul>
    <div class="wrapper input radio">
        <h2>Glide ?</h2>
        <label for="glideTrue">On</label>
        <input type="radio" id="glideTrue" name="glide" value="true">
        <label for="glideFalse">Off</label>
        <input type="radio" id="glideFalse" name="glide" value="false">
    </div>
    <div class="wrapper input range">
        <label for="moduleValue">Module value</label>
        <input type="range" id="moduleValue" min="0" max="100" step="1" value="50">
    </div>
    <div class="close-button">x</div>
    <p>
        For fast editing: use the keyboard to type a module name and
        numerical value for its parameter. Hit enter to confirm.
    </p>
    <button class="confirm-button">OK</button>
</div>
